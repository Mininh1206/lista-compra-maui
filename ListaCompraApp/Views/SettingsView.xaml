<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ListaCompraApp.ViewModels"
             xmlns:zxing="clr-namespace:ZXing.Net.Maui.Controls;assembly=ZXing.Net.MAUI.Controls"
             x:Class="ListaCompraApp.Views.SettingsView"
             x:DataType="vm:SettingsViewModel"
             Title="SettingsView">
    <Grid Padding="35"
          RowDefinitions="auto,*">
        <Grid RowDefinitions="auto,auto" ColumnDefinitions="50*,50*" RowSpacing="20">
            <Label Text="User ID:" VerticalOptions="End"/>
            <Label Text="{Binding Id}" Grid.Row="1" Grid.ColumnSpan="2"/>
            <Button Text="Scan QR"
                    Command="{Binding ChangeIdCommand}"
                    WidthRequest="150"
                    Grid.Column="1"/>
        </Grid>

        <zxing:BarcodeGeneratorView HeightRequest="200"
                                    WidthRequest="200"
                                    ForegroundColor="Black"
                                    Value="{Binding Id}"
                                    Grid.Row="1"
                                    Format="QrCode"
                                    Margin="3" />
    </Grid>
</ContentPage>